<h1>Players</h1>

<%= link_to 'New player', new_player_path %>

<ul>
  <% @players.each do |player| %>
    <li>
      <%= link_to player.name, player %>
      (<%= player.job %>)
      | <%= player.health %>
      | <%= player.magic %>

      <% unless player.is_alive %>
        | Dead
      <% end %>
    </li>
  <% end %>
</ul>
